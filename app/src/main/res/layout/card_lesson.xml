<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:background="#00000000"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="224dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:tint="#99000000"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_background" />
        </FrameLayout>

        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/profile_img_tc"/>

                <TextView
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="10dp"
                    android:text="Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_tc"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:background="#00000000"
                android:textColor="@color/White"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:text="Lesson Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_title" />

            <TextView
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:text="Lesson Subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_subject" />

            <TextView
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:text="Lesson Place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_place" />

            <TextView
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:text="Lesson Fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lesson_fee" />

            <TextView
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"
                android:id="@+id/textView50" />

            <LinearLayout
                android:background="#00000000"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:background="#00000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_review"
                    android:id="@+id/imageView10" />

                <TextView
                    android:background="#00000000"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="5dp"
                    android:text="Review count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/review_count"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>