<?xml version="1.0.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="16dp">

    <ImageView
        android:layout_weight="1"
        android:layout_width="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView5"
        android:layout_height="100dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/login_id"
        android:hint="id"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteY="128dp"
        tools:layout_editor_absoluteX="85dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/login_pw"
        android:hint="password"
        android:layout_below="@+id/login_id"
        android:layout_alignLeft="@+id/login_id"
        android:layout_alignStart="@+id/login_id"
        tools:layout_editor_absoluteY="200dp"
        tools:layout_editor_absoluteX="85dp" />

    <Button
        android:text="로그인"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:id="@+id/login"
        android:layout_below="@+id/login_pw"
        android:layout_alignLeft="@+id/login_pw"
        android:layout_alignStart="@+id/login_pw"
        android:layout_alignRight="@+id/login_pw"
        android:layout_alignEnd="@+id/login_pw"
        tools:layout_editor_absoluteY="291dp"
        tools:layout_editor_absoluteX="85dp" />

    <include
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/login_social"
        android:layout_above="@+id/gojoin"
        android:layout_alignRight="@+id/gojoin"
        android:layout_alignEnd="@+id/gojoin"
        android:layout_alignLeft="@+id/gojoin"
        android:layout_alignStart="@+id/gojoin"
        tools:layout_editor_absoluteY="360dp"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_gravity="bottom">

        <Button
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gojoin"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/login"
            android:layout_alignStart="@+id/login"
            android:layout_alignRight="@+id/login"
            android:layout_alignEnd="@+id/login"
            tools:layout_editor_absoluteY="426dp"
            tools:layout_editor_absoluteX="85dp"
            android:layout_weight="1" />

        <Button
            android:text="아이디/비번 찾기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="422dp"
            tools:layout_editor_absoluteX="205dp"
            android:id="@+id/button2"
            android:layout_weight="0.58" />

    </LinearLayout>

</LinearLayout>